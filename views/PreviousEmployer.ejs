                                        }
                                        else
                                            errorEmails.push(arr[i]);
                                    }
                                    // If erroneous emails found, or if duplicate email found
                                    if (errorEmails.length > 0)
                                        t.val(errorEmails.join("; ")).addClass('multiple_emails-error');
