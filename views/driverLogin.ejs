<body>
    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div style="background-color: #65666A" class="auth-wrapper d-flex no-block justify-content-center align-items-center">
            <div style="border: 1px solid #fff;border-radius: 34px;background-color: #F6F6F6" class="auth-box border-top border-secondary">
                <div id="loginform">
                    <div class="text-center p-t-20 p-b-20">
                        <span style="border: 1px solid #fff;border-radius: 34px;background-color: #F6F6F6" class="db"><img style="width: 70%;"src="images/logo.png" alt="logo" /></span>
                       
                    </div>
                   
                    <!-- Form -->
                    <form class="form-horizontal m-t-20" id="login_form">
                        <h3 style="border-radius: 18px;background-color: #01acc8;text-align: center;color: #fff;padding: 10px;"> <i class="ti-user"></i> Driver Login</h3>

                        <div class="text-center p-t-20 p-b-20">
                            <img style="width: 25%;" src="images/driverLogin.png" alt="logo" />
                        </div>

                        <div class="row p-b-30">
                            <div class="col-12">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span style="background-color: #01acc8;" class="input-group-text text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                    </div>
                                    <input type="text" name="license" class="form-control form-control-lg rmvallspace" placeholder="License" aria-label="license" aria-describedby="basic-addon1" required="">
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span style="background-color: #65666A;" class="input-group-text text-white" id="basic-addon2"><i class="ti-pencil"></i></span>
                                    </div>
                                    <input type="password" name="password" class="form-control form-control-lg" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1" required="">
                                </div>
                            </div>
                        </div>
                        
                        <div class="row border-top border-secondary">
                            <div class="col-12">
                                <div class="form-group">
                                    <div style="text-align: center;" class="p-t-20">
                              
                                        <button style="border-radius:30px" class="btn btn-dark login_button btn-lg" id="loginBtn" type="submit">Login</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper scss in scafholding.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper scss in scafholding.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- All Required js -->
    <!-- ============================================================== -->
    <script src="assets/libs/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="assets/libs/popper.js/dist/umd/popper.min.js"></script>
    <script src="assets/libs/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugin js -->
    <!-- ============================================================== -->
    <script>

        $(document).ready(function()
        {
            $('#login_form').submit(function(event){
                $("#loginBtn").text('Please wait');
                $("#loginBtn").attr('disabled', true);
                event.preventDefault();
                let formdata =  $('#login_form').serialize();
                $.ajax({
                    url:'/passwordCheckDriver',
                    method:'POST',
                    data:formdata,
                    success:function(data){
                        console.log(data);
                        if(data.status){
                            // swal("Hello world!");
                            // alert('success')
                            window.location = "/driverDashboard";
                        }else{
                            $("#loginBtn").text('Login');
                            $("#loginBtn").prop('disabled', false);
                            // Swal.fire('Any fool can use a computer')
                            Swal.fire({
                            title: 'Error!',
                            text: 'Please check Username/Password',
                            icon: 'error',
                            confirmButtonText: 'Cool'
                            })
                            // window.location = "/";
                        }
                        
                    }

                });
            });
        });

    $('[data-toggle="tooltip"]').tooltip();
    $(".preloader").fadeOut();
    // ============================================================== 
    // Login and Recover Password 
    // ============================================================== 
    $('#to-recover').on("click", function() {
        $("#loginform").slideUp();
        $("#recoverform").fadeIn();
    });
    $('#to-login').click(function(){
        
        $("#recoverform").hide();
        $("#loginform").fadeIn();
    });
    </script>
    <script src="sweetAlert/sweetalert2.min.js"></script>

</body>

</html>