                        <script src="assets/extra-libs/DataTables/datatables.min.js"></script>

                        <script src="assets/libs/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
                        <script>



                            /****************************************
                             *       Basic Table                   *
                             ****************************************/
                            // $('#zero_config').DataTable();

                            $(document).ready(function () {

                                $(".searchdriver").click(function(){
                                    let driver_name		=	$('#search_drivername').val();
                                    let driver_license	=	$('#search_driverlicense').val();
									if(driver_name == "" && driver_license == ""){
										Swal.fire({
											title: 'Error!',
											text: 'Please Enter Driver Name Or Driver License',
											icon: 'error',
											confirmButtonText: 'Cool'
										})
									}
									else{
                                    $("#listDriver").dataTable().fnDestroy();
                                    let customer = $('#listDriver').DataTable({
                                        processing: true,
                                        serverSide: true,
                                        order: [[0, 'ASC']],
                                        lengthMenu: [[10, 50, 100, 250, 500, 1000], [10, 50, 100, 250, 500, 1000]],
                                        pageLength: 10,
                                        searching: true,
                                        ajax: {
                                            url: "/superadmingetsearchDriver",
                                            data: function (data) {
                                                data.driver_name = driver_name,
                                                data.driver_license = driver_license
                                            },
                                            type: "GET",
                                        },
                                        columns: [
                                            { "data": "slno" },
                                            { "data": "company_name" },
                                            { "data": "driver_name" },
                                            { "data": "driver_license" },
                                            { "data": "password" },
                                        ],
                                        select: true
                                    });
									}
                                });
                            });
                        </script>
